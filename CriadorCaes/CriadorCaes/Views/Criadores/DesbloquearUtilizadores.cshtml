@model IEnumerable<CriadorCaes.Models.Criadores>

@{
   ViewData["Title"] = "Desbloquear Utilizadores";
}

<h1>Desbloquear Utilizadores</h1>

<form asp-action="DesbloquearUtilizadores" method="post">
   <table class="table">
      <thead>
         <tr>
            <th></th>
            <th>
               @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.NomeComercial)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Telemovel)
            </th>
         </tr>
      </thead>
      <tbody>
         @foreach (var item in Model) {
            <tr>
               <td>
                  <input type="checkbox"
                         name="listaUsersDesbloquear"
                         value="@item.UserNameId" />
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Nome)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.NomeComercial)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Morada)<br />
                  @Html.DisplayFor(modelItem => item.CodPostal)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Email)
               </td>
               <td>
                  @Html.DisplayFor(modelItem => item.Telemovel)
               </td>
            </tr>
         }
      </tbody>
   </table>

   <input type="submit" 
          class="btn"
          value="Actualizar dados criadores" />


</form>